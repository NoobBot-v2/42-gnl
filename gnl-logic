#define BUFFER 42
#define FD 1024

typedef struct s_gnl_state {
    char *buf;
    int buf_bytes;
    int EOF_reached;
} t_gnl_state;

void ft_store_buffer(int read_bytes, char *new_buf);
char *ft_strjoin(char *src, int src_byte, char *dest, int dest_byte);
char *ft_substring(char *src, int start, int bytes);
int ft_read(int fd);
char *ft_get_line();

static t_gnl_state buf_store;

char	*get_next_line(int fd)
{
    int index;
    int read_bytes;
    char *next_line;

    while (buf_store.EOF_reached == 0)
    {
        index = 0;
        read_bytes = 0;        
        if (buf_store.buf_bytes > 0)//Checks if existing buffer has new line first, and returns it
            while (index < buf_store.buf_bytes)
            {
                if (buf_store.buf[index] == '\n')
                {
                    next_line = ft_get_line();
                    return (next_line);
                }
                index++;
            }
        //All lines will be exhausted from buf_store first before reading more
        read_bytes = ft_read(fd);
        //if read bytes == 0, it would mean EOF has been reached and no new line has been found
        if (read_bytes == 0)
            return('\0');//Cannot return null immediately, need to return the remainder of the buffer
        if (read_bytes == -1)
            return('\0');//Return null on error
    }
    return ('\0');
}
